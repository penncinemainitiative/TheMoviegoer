<% layout('layout') -%>

<div id="events" class="container">
  <div class="title">Features</div>
  <% if (isEditor === 1) { %>
  <button type="submit" class="btn btn-default btn-sm" id="eventBtn"
          data-toggle="modal" data-target=".event-modal"><span
            class="glyphicon glyphicon-edit" aria-hidden="true"></span>
    Create event
  </button>
  <% } %>
  <% events.forEach(function(event) { %>
  <div class="row">
    <img src="<%= event.image %>">
  </div>
  <% }); %>
</div>

<% include eventmodal %>