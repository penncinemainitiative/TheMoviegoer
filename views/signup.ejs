<% layout( 'layout' ) -%>

<div id="console" class="container">
  <div class="title">Become an author!</div>
  <input type="email" class="form-control" id="inputEmail" placeholder="Email" onkeydown="if (event.keyCode == 13) document.getElementById('loginBtn').click();">
  <input type="text" class="form-control" id="inputName" placeholder="Name" onkeydown="if (event.keyCode == 13) document.getElementById('loginBtn').click();">
  <input type="email" class="form-control" id="inputUser" placeholder="Username" onkeydown="if (event.keyCode == 13) document.getElementById('loginBtn').click();">
  <input type="password" class="form-control" id="inputPassword" placeholder="Password" onkeydown="if (event.keyCode == 13) document.getElementById('loginBtn').click();">
  <input type="password" class="form-control" id="inputPasswordConfirm" placeholder="Confirm password" onkeydown="if (event.keyCode == 13) document.getElementById('loginBtn').click();">
  <button type="submit" class="btn btn-default btn-sm" id="signupBtn">Sign up</button>
  <div id="issue" class="alert alert-danger" role="alert" align="center" hidden></div>
</div>