<div id="previewView">
  <header class="post-header">
    <h2 class="post-title"><%= title %></h2>
    <p class="post-meta"><%= date %> • <a href="/author/profile/<%= author.replace(/\s+/g, '') %>"><%= author %></a>
      <% if (isEditor === 1) { %>
      • <a href="/article/<%= articleId %>/draft">Edit Article</a>
      <% } %>
    </p>
  </header>
  <div class="col-lg-9 col-md-8 col-sm-8 col-xs-12">
    <div class="posttxt">
      <%- text %>
    </div>
  </div>
  <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12"></div>
</div>